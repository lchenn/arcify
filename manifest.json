{
  "manifest_version": 3,
  "name": "Arc-Style Sidebar",
  "version": "1.0",
  "description": "A sidebar extension that replicates Arc browser's tab management system",
  "permissions": [
    "tabs",
    "tabGroups",
    "sidePanel",
    "storage",
    "bookmarks",
    "commands"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["sidebar.js"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "128": "assets/icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Toggle side panel"
    }
  }
}